{
	"env": {
		"browser": true,
		"commonjs": true,
		"es2021": true
	},
	"extends": [
		"eslint:recommended",
		"airbnb",
		"airbnb/hooks",
		"plugin:react/recommended",
		"plugin:prettier/recommended"
	],
	"parserOptions": {
		"ecmaVersion": "latest"
	},
	"plugins": ["prettier"],
	"rules": {
		"no-underscore-dangle": "off",
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"jsx-a11y/anchor-is-valid": "off",
		"jsx-a11y/label-has-associated-control": "off",
		"prettier/prettier": ["error",{
			"endOfLine": "auto"}
		  ]
	}
}
